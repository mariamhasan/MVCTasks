@model List<Employee>

<!DOCTYPE>
<html>
<head>
    <script src="~/scripts/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        @Html.ActionLink("Navbar", "Index", "Home", null, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    @Html.ActionLink("Navbar", "Index", "Home", null, new { @class = "nav-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Employees", "Index", "Employee", null, new { @class = "nav-link" })
                </li>

            </ul>
        </div>
    </nav>

    <div class="container">
        <h2>
            Employees
        </h2>
        <hr />
        @Html.ActionLink("+ Add new employee", "Add", "Employee", null, new { @class="btn btn-primary"})
        @if (Model != null && Model.Count > 0)
        {
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Salary</th>
                    <th>Gender</th>
                    <th>Address</th>

                </tr>
            </thead>
            <tbody>
                @foreach (Employee employee in Model)
                {
                    <tr>
                        <td>@employee.Name</td>
                        <td>@employee.Email</td>
                        <td>@employee.Salary</td>
                        <td>@employee.Gender</td>
                        <td>@employee.Address</td>
                    </tr>
                }
            </tbody>

        </table>
        }
        else
        {
            <div class="alert alert-info">
                No employees found
            </div>
            
        }
    </div>
    
       
</body>
</html>
